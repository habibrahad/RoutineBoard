<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/books"
    tools:context=".FrontActivity">

    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="@dimen/image_header_dimen"
        android:layout_height="@dimen/image_header_dimen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/routine_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/header_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="@string/routineboard"
        android:textColor="@color/light_green"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bomb"
        style="@android:style/Animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/megrim"
        android:text="@string/bomb"
        android:textColor="@color/light_red"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/header_icon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/sectiona"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/section_a"
                android:layout_gravity="center"/>


            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#D3FB84"
                android:text="Section A"/>





            <ImageView
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/sectionb"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/section_b" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"

                android:text="Section B"
                android:textColor="#D3FB84"
                android:textSize="18sp" />

            <ImageView
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/sectionc"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/section_c"
                android:layout_gravity="center"/>


            <TextView

                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#D3FB84"
                android:text="Section C"/>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
