<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.darkwhite.routineboard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_routine"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_routine_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.darkwhite.routineboard.SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.darkwhite.routineboard.FrontActivity"/>
        <activity android:name="com.darkwhite.routineboard.NotificationActivity" />

        <receiver android:name="com.darkwhite.routineboard.AlarmReceiver" />

        <activity android:name="com.darkwhite.routineboard.MainActivity"></activity>
        <activity android:name="com.darkwhite.routineboard.more"></activity>
    </application>

</manifest>